@page
@model IndexModel
@{
    ViewData["Title"] = "Rok przestępny";
}

<div>
    <form method="post">
        <div class="form-group">
            <label asp-for="rok_przestepny.Rok"></label>
            <input asp-for="rok_przestepny.Rok" class="form-control" value="" min="1899" max="2022" required />
            <span asp-validation-for="rok_przestepny.Rok" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="rok_przestepny.Imie"></label>
            <input asp-for="rok_przestepny.Imie" class="form-control" maxlength="100" value="" />
            <span asp-validation-for="rok_przestepny.Imie" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Zatwierdź</button>
    </form>
</div>


    <div class="mt-3">
    <p>@ViewData["message"]</p>
    </div>


